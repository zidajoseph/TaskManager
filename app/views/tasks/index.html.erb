<h1>Task list</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Contents</th>
  </tr>

  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'edit', edit_task_path(task) %></td>
    <td><%= link_to 'delete', task, method: :delete, data: { confirm: 'Are you sure ?' } %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New task', new_task_path %>
